<%= form_for(@kanban, url: kanbans_create_path) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :name, class: "label" %>
    <div class="control">
      <%= f.text_field :name, class: "input" %>
    </div>
  </div>
  <%= f.submit "かんばんを作成する", class: "button is-link" %>
<% end %>